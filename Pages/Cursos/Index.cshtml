@page
@model crmEmpresa.Pages.Cursos.IndexModel
@{
}

<link rel="stylesheet" href="~/css/CursosIndex.css">

<a href="~/Cursos/Create" class="add-client-link">Agregar Curso</a>
<table class="table table-bordered mt-4">
    <thead>
        <tr>
            <th>Nombre del Curso</th>
            <th>Descripción</th>
            <th>Estatus</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Cursos.Count > 0)
        {
            foreach (var curso in Model.Cursos)
            {
                <tr>
                    <td>@curso.Nombre</td>
                    <td>@curso.Descripcion</td>
                    <td>@curso.Estatus</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@curso.Id" class="btn btn-warning btn-lg">Editar</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@curso.Id" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-lg">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>