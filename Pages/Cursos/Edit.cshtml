@page
@model crmEmpresa.Pages.Cursos.EditModel
@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre del Curso:</label>
        <input asp-for="Nombre" type="text" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripcion:</label>
        <input asp-for="Descripcion" type="text" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estatus">Estatus:</label>
        <select asp-for="Estatus" class="form-control" required>
            <option value="Activo">Activo</option>
            <option value="No Activo">No Activo</option>
        </select>
        <span asp-validation-for="Estatus" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success mt-3">Agregar Persona</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}